{
  "sourceRoot": "packages/atoms/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/atoms",
        "tsConfig": "packages/atoms/tsconfig.lib.json",
        "project": "packages/atoms/package.json",
        "entryFile": "packages/atoms/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "assets": [
          {
            "glob": "packages/atoms/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/atoms/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/atoms"],
      "options": {
        "jestConfig": "packages/atoms/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
